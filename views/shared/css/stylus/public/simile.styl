#simile
  border-radius 2px

  .timeline-copyright
    display none

  .timeline-ether-bg
    background white

  .timeline-date-label
    border-left 2px solid
    color #3f3f3f
    height 2em

  .timeline-date-label-em
    font-weight bold
    font-size 1.3em

  .timeline-ether-weekends
    background none

#neatline
  #simile
    opacity 0.95
    height 20%
    width 70%
    bottom 40px
    right 40px

